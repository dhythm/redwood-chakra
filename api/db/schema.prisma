datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Ability {
  id               String             @id @default(uuid())
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  name             String
  domain           Domain
  action           Action
  roles            Role[]
  AbilitiesOnRoles AbilitiesOnRoles[]

  @@unique([name])
}

model Role {
  id               String             @id @default(uuid())
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  organizationCode String
  name             String
  users            User[]
  abilities        Ability[]
  AbilitiesOnRoles AbilitiesOnRoles[]

  @@unique([organizationCode, name])
}

model AbilitiesOnRoles {
  role       Role     @relation(fields: [roleId], references: [id])
  roleId     String
  ability    Ability  @relation(fields: [abilityId], references: [id])
  abilityId  String
  assignedAt DateTime @default(now())
  // assignedBy String

  @@id([roleId, abilityId])
}

model Organization {
  id               String   @id @default(uuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  organizationCode String   @unique
  name             String
  users            User[]
}

model User {
  id                  String       @id @default(uuid())
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  organizationCode    String
  organization        Organization @relation(fields: [organizationCode], references: [organizationCode])
  name                String?
  email               String
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
  Role                Role?        @relation(fields: [roleId], references: [id])
  roleId              String?

  @@unique([organizationCode, email])
}

enum Action {
  quary
  mutate
}

enum Domain {
  event
  settings
}
